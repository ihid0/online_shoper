<%- include ('../partials/header&style.ejs') -%>

    <div align="center" class="container mb-5 mt-5">
        <h2 class="mb-5">Product details</h2>
        <div class="card bg-primary mb-3 p-1 col-sm-12 col-lg-10" style="border-radius: 10px;">
            <% if(prod.image == "" || prod.image == undefined){ %>
                <img src="\images\alt_detailes.png" alt="" style="border-radius: 10px;">
                <% }else{ %>
                <img style="border: solid black 1px; border-radius: 10px;" src="/images/<%=prod.image%>" class="card-img-top" alt="" width="400px">
            <% } %>
            <div class="card-body">
                <h2 align="left" style="color: #F1F2EC;" class="card-title"><%= prod.title%></h2>
                <br><br>
                <h4 align="left" style="color: #F1F2EC;"  class="card-text">Descrption:</h4>
                <h5><%= prod.description%></h5>
                <hr style="color: white;">
                <h4 align="left" style="color: #F1F2EC;">Owner:    <%=usr.username%></h4>
                <hr style="color: white;">
                <h4 align="left" style="color: #F1F2EC;">Contact:   <%=usr.phonenumber%></h4>
                <hr style="color: white;">
                <h4 align="left" style="color: #F1F2EC;">Price:    <%=prod.price%>   SAR</h4>
                <hr style="color: white;">
                <h4 align="left" style="color: #F1F2EC;">City:     <%=prod.city%> </h4>
                
                <% if(user && prod.userId == user.id || user&&user.isAdmin){ %>
                <hr style="color: white;">
                <a class="btn" name="updateIcone" id="update" style="color:white; text-decoration: none; margin-right: 20px;" href="/edit/<%=prod._id%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                </a>
                <a class="btn" name="deleteIcone"  id="delete" style="color:white; text-decoration: none;" href="/delete/<%=prod._id%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                </a>
                <% } %>
            </div>
        </div>
    </div>
    <% if(user && prod.userId == user.id || user&&user.isAdmin){ %>
    <div align="center" class="container ">
        <h2>Upload Image</h2>
        <div style="border-radius: 10px;" class="col-sm-10 cool-lg-8 bg-primary mt-5 p-2">
            <form action="/productImage/<%=prod._id%>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="image" class="form-label">Image:</label>
                    <input  id="image" name="image" type="file" class="form-control"  style="width: 110px; display: inline;" required>
                    <button style="background-color: #282923; margin-left: 3px; margin-bottom: 3px;" type="submit" class="btn v ">Upload</button>
                </div>
            </form>
        </div>
    </div>
    <% } %>

<%- include ('../partials/footer.ejs') -%>