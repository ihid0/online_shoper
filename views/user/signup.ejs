<%- include ('../partials/header&style.ejs') -%>

<div class="container mt-5">
    <h2>Sign up</h2>
    <% if(error && error != "") { %>
        <div class="alert alert-danger">
                <%= error %>
        </div>
        <% } %>
    <div style="border-radius: 10px;" class="col-sm-12 bg-primary mt-5 p-5">
        <form action="/signup" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" type="text" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input  id="email" name="email" type="email" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="phonenumber" class="form-label">Phone number</label>
                <input  id="phonenumber" name="phonenumber" type="text" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input  id="password" name="password" type="password" class="form-control" minlength="4" >
            </div>
            <div class="mb-3">
                <label for="confirmpassword" class="form-label">Confirm password</label>
                <input  id="confirmpassword" name="confirmpassword" type="password" class="form-control" minlength="4" >
            </div>
            <button style="background-color: #282923;" type="submit" class="btn v">Sign up</button>
        </form>
    </div>
</div>

<%- include ('../partials/footer.ejs') -%>
